      <PackageReference Include="MQTTnet" Version="5.0.1.1416" />
      <PackageReference Include="MQTTnet-CP" Version="2.7.5" />
      <PackageReference Include="MQTTnet.AspNetCore" Version="5.0.1.1416" />
      <PackageReference Include="MQTTnet.Extensions.ManagedClient" Version="4.3.7.1207" />
      <PackageReference Include="MQTTnet.Extensions.TopicTemplate" Version="5.0.1.1416" />
      <PackageReference Include="Npgsql" Version="10.0.0-rc.1" />
      <PackageReference Include="SQLitePCLRaw.bundle_e_sqlite3" Version="3.0.2" />
      <PackageReference Include="System.IO.Ports" Version="9.0.9" />
    </ItemGroup>

</Project>
